{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "es6",
      "es2020",
      "dom",
      "dom.iterable"
    ],
    "removeComments": true,
    "target": "ES2020",
    "noImplicitAny": false,
    "sourceMap": false,
    "inlineSourceMap": false,
    "inlineSources": false,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "types": [
      "./src/global_urls.d.tx"
    ],
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
